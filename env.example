# MindsDB Connection (Local)
MINDSDB_HOST=127.0.0.1
MINDSDB_PORT=47334

# MindsDB Cloud Connection (Optional - leave empty for local)
MINDSDB_USER=
MINDSDB_PASSWORD=

# OpenAI API Key for embeddings and reranking (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Azure OpenAI (Alternative to OpenAI)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2023-05-15

# Knowledge Base Configuration
KB_NAME=codebase_kb
EMBEDDING_MODEL=text-embedding-3-large
RERANKING_MODEL=gpt-4o

# Stress Testing Configuration
MAX_CONCURRENT_QUERIES=100
STRESS_TEST_DURATION=300
BATCH_SIZE=500
THREADS=10 